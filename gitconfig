[color]
  ui = auto
[alias]
  co = checkout
  ci = commit -v
  b = branch
  st = status
  branches = for-each-ref --sort=committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
[push]
  default = current
[branch]
  autosetuprebase = always
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
